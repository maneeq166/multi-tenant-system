generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  organizations Organization[]
}

model Organization {
  id        Int   @id @default(autoincrement())
  ownerId   Int   
  createdAt DateTime @default(now())
  name      String    @unique

  user User? @relation(fields: [ownerId],references: [id])
}

enum Role{
  USER 
  ADMIN
}

model OrgMember {
  id Int @id @default(autoincrement())
  orgId Int 
  userId Int
  createdAt DateTime @default(now())
  role Role @default(USER)
}
model AuditLog {
  id Int @id @default(autoincrement())
  orgId Int
  actorId Int 
  action String 
  entity String
  entityId Int
  createdAt DateTime @default(now())
}